@model WebApplicationAPP.Models.Servicio

@{
    ViewData["Title"] = "Editar Servicio";
}

<h2>Editar Servicio</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label>Descripción</label>
        <input asp-for="Descripcion" class="form-control" />
    </div>

    <div class="form-group">
        <label>Monto</label>
        <input asp-for="Monto" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label>IVA</label>
        <input asp-for="IVA" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label>Encargado</label>
        <input asp-for="Encargado" class="form-control" />
    </div>

    <div class="form-group">
        <label>Sucursal</label>
        <input asp-for="Sucursal" class="form-control" />
    </div>

    <div class="form-group">
        <label>Estado</label>
        <select asp-for="Estado" class="form-control">
            <option value="true">Activo</option>
            <option value="false">Inactivo</option>
        </select>
    </div>

    <br />

    <button type="submit" class="btn btn-success">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>

</form>