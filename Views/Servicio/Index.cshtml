@model List<WebApplicationAPP.Models.Servicio>

@{
    ViewData["Title"] = "Servicios";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Gestión de Servicios</h2>
    <a asp-action="Create" class="btn btn-primary">+ Registrar Servicio</a>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Monto</th>
            <th>IVA</th>
            <th>Área de Servicio</th>
            <th>Encargado</th>
            <th>Sucursal</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.Monto.ToString("C")</td>
                <td>@((item.IVA * 100).ToString("0"))%</td>
                <td>@item.AreaServicioTexto</td>
                <td>@item.Encargado</td>
                <td>@item.Sucursal</td>
                <td>
                    @if (item.Estado)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="VerReservas" asp-route-id="@item.Id" class="btn btn-sm btn-info">Ver Reservas</a>
                </td>
            </tr>
        }
    </tbody>
</table>