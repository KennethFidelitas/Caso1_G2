@model IEnumerable<WebApplicationAPP.Models.Servicio>

@{
    ViewData["Title"] = "Servicios";
}

<h2>Servicios</h2>

<a asp-action="Create" class="btn btn-primary">Nuevo Servicio</a>

<br />
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Monto</th>
            <th>IVA</th>
            <th>Área de Servicio</th>
            <th>Encargado</th>
            <th>Sucursal</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.Monto</td>
                <td>@item.IVA</td>
                <td>
                    @{
                        string area = "";
                        if (item.AreaServicio == 1)
                        {
                            area = "Servicios Financieros";
                        }
                        else if (item.AreaServicio == 2)
                        {
                            area = "Servicios de Salud";
                        }
                        else if (item.AreaServicio == 3)
                        {
                            area = "Servicios de Capacitación";
                        }
                    }
                    @area
                </td>
                <td>@item.Encargado</td>
                <td>@item.Sucursal</td>
                <td>
                    @(item.Estado ? "Activo" : "Inactivo")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-controller="Reserva" asp-action="Historial" asp-route-idServicio="@item.Id" class="btn btn-info btn-sm">Ver Reservas</a>
                </td>
            </tr>
        }
    </tbody>
</table>